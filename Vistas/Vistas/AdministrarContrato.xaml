        <Button x:Name="btn_volver" Content="Volver" HorizontalAlignment="Left" Margin="1079,551,0,0" VerticalAlignment="Top" Width="98" Height="36" Click="btn_volver_Click"/>
        <GroupBox x:Name="groupBox1" Header="Datos" HorizontalAlignment="Left" Height="396" Margin="789,10,0,0" VerticalAlignment="Top" Width="388">
            <DataGrid x:Name="dg_contrato" HorizontalAlignment="Left" Height="343" Margin="0,10,0,0" VerticalAlignment="Top" Width="379"/>
        </GroupBox>

    </Grid>
</Controls:MetroWindow>
